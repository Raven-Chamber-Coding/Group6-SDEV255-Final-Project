<%- include('partials/header'); -%>
   <div class="main-box2">
      <h1>Create Course:</h1>
      <p>Create or delete classes.</p>
      <form action="" method="POST">
        <label for="course">Course name:</label><br>
        <input type="text" id="course" name="course" required><br>
        <label for="teacher">Teacher name:</label><br>
        <input type="text" id="teacher" name="teacher" required><br>
        <label for="description">Class Description:</label><br>
        <input type="text" id="description" name="description"><br>
        <label for="subject">Course subject:</label><br>
        <input type="text" id="subject" name="subject" required><br>
        <label for="length">Length of course (by weeks):</label><br>
        <input type="text" id="length" name="length" required><br>
        <label for="points">Course credits:</label><br>
        <input type="text" id="points" name="points" required><br>
        <button>Submit</button>
    </form>  
   </div>
   <div class="courses">
     <h2>Current Courses:</h2>
      <% if (courses.length > 0) { %>
         <% courses.forEach(course => { %> 
             <a class="single" href="/courses/<%= course._id %> ">
                 <h3 class="course">Course: <%= course.course %> </h3>
                 <p class="teacher">Teacher: <%= course.teacher %> </p>
                 <p class="subject">Subject: <%= course.subject %> </p>
             </a>
         <% }) %> 
     <% } else { %> 
         <p>There are no courses to display...</p>
     <% } %> 
   </div>
   <%- include('partials/footer'); -%>