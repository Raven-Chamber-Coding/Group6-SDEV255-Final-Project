<%- include('partials/header'); -%>
   <div class="main-box2">
      <h1>Sign up!!</h1>
      <p>Sign up or drop classes.</p>  
   </div>
   <div class="courses">
     <h2>Available Courses:</h2>
      <% if (courses.length > 0) { %>
         <% courses.forEach(course => { %> 
             <a class="single" href="/courses/<%= course._id %> ">
                 <h3 class="course">Course: <%= course.course %> </h3>
                 <p class="teacher">Teacher: <%= course.teacher %> </p>
             </a>
         <% }) %> 
     <% } else { %> 
         <p>There are no courses to display...</p>
     <% } %> 
   </div>
   <%- include('partials/footer'); -%>