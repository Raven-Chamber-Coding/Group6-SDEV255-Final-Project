<%- include('partials/header'); -%>
   <div class="main-box2">
      <h1>Sign up!!</h1>
      <p>Sign up or drop classes.</p>
   </div>
   <div class="courses2">
    <h2>Your current courses:</h2>
      <p>You have no classes Currently...</p>
   </div>
   <div class="courses">
     <h2>Available Courses:</h2>
      <% if (courses.length > 0) { %>
         <% courses.forEach(course => { %> 
             <a class="single" href="/courses/<%= course._id %> ">
                 <form method="POST">
                 <h3 class="course" for="course">Course: <%= course.course %> </h3>
                 <p class="teacher" for="teacher">Teacher: <%= course.teacher %> </p>
                 <p class="subject">Subject: <%= course.subject %></p>
                 <!--<button>Add</button>-->
                 </form>
             </a>
         <% }) %> 
     <% } else { %> 
         <p>There are no courses to display...</p>
     <% } %> 
   </div>
   <%- include('partials/footer'); -%>